<div class="flex flex-col bg-white border shadow-sm rounded-xl dark:bg-slate-900 dark:border-gray-700 dark:shadow-slate-700/[.7]">
    <img width="200" height="200" class="w-full h-auto rounded-t-xl" src="https://via.placeholder.com/120x120.png/00aa33?text=Article" alt="Image Description">
    <div class="p-4 md:p-5">
      <div class="text-lg font-bold text-gray-800 dark:text-white">
        <h3>{{article.titre}}</h3>
        <p>{{ article.utilisateur }}</p> 
          <img src="{{ article.urlImg }}" alt="{{ article.titre }}">
          <a href="/article/id/{{ article.id }}">Lire la suite</a>
      </div>
      <p>{{ article.dateCreation | date('d/m/Y') }}</p>
      <p class="mt-5 text-xs text-gray-500 dark:text-gray-500">
        <a href={{ path('app_article_id', {id:article.id}) }}></a>
      </p>
    </div>
</div>